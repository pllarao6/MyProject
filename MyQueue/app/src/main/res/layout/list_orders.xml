<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="OrderId:"
        android:id="@+id/orderid_key"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Order Value"
        android:id="@+id/order_value"
        android:layout_alignTop="@+id/orderid_key"
        android:layout_toRightOf="@+id/orderid_key"
        android:layout_toEndOf="@+id/orderid_key"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Rs"
        android:id="@+id/total_key"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/total"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total"
        android:id="@+id/total"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date"
        android:id="@+id/date"
        android:layout_below="@+id/orderid_key"
        android:layout_alignLeft="@+id/orderid_key"
        android:layout_alignStart="@+id/orderid_key"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time"
        android:id="@+id/time"
        android:layout_alignBottom="@+id/date"
        android:layout_toRightOf="@+id/date"
        android:layout_marginLeft="50dp"/>

    <ImageView
        android:id="@+id/pay_status_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1"
        android:scaleY="1"
        android:src="@android:drawable/ic_delete"
        android:layout_alignBottom="@+id/time"
        android:layout_alignLeft="@+id/total_key"/>

    <ImageView
        android:id="@+id/process_status_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1"
        android:scaleY="1"
        android:src="@android:drawable/ic_delete"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/time"
        android:layout_marginRight="50dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#E6E6E6"
        android:layout_below="@+id/date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"/>


</RelativeLayout>