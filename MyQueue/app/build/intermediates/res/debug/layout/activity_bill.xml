<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pullaapps.example.com.myqueue.Bill">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="OrderId"
        android:id="@+id/OrderId"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="XXX"
        android:id="@+id/OrderId_text"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/OrderId"
        android:layout_toEndOf="@+id/OrderId"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="date"
        android:id="@+id/date"
        android:layout_below="@+id/OrderId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="time"
        android:id="@+id/time"
        android:layout_alignTop="@+id/date"
        android:layout_toRightOf="@+id/OrderId_text"
        android:layout_toEndOf="@+id/OrderId_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BABABA"
        android:layout_below="@+id/time"
        android:layout_marginTop="15dp"
        android:id="@+id/view"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_below="@+id/view"
        android:layout_marginTop="5dp"
        >

    </ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BABABA"
        android:layout_below="@+id/listView"
        android:layout_marginTop="15dp"
        android:id="@+id/view1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_key"
        android:text="Total"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXXX"
        android:textSize="25dp"
        android:id="@+id/total_value"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/total_key"
        android:layout_marginLeft="15dp"/>

</RelativeLayout><!-- From: file:/C:/Users/pulla/AndroidProjects/MyQueue/app/src/main/res/layout/activity_bill.xml -->