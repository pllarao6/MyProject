<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pulla.tabdemo.DisplayItem">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_item_name"
        android:text="XXXXX"/>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/frame_layout">

    <ProgressBar
        android:layout_marginTop="100dp"
        android:layout_marginLeft="150dp"
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_marginTop="20dp"/>

</FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame_layout"
        android:text="Price"
        android:id="@+id/price_view"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/price_value"
        android:layout_alignTop="@+id/price_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="41dp"
        android:layout_marginEnd="41dp"
        android:text="00" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Add to Meal"
        android:background="#ff2ac264"
        android:id="@+id/button_meal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Quantity"
        android:id="@+id/quantity"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/price_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:id="@+id/Total"
        android:layout_below="@+id/quantity"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/total_key"
        android:layout_alignTop="@+id/Total"
        android:text="00"
        android:layout_alignRight="@+id/price_value"
        android:layout_alignEnd="@+id/price_value" />

    <Spinner
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/spinner"
        android:layout_alignTop="@+id/quantity"
        android:layout_alignLeft="@+id/total_key"
        android:layout_alignStart="@+id/total_key" />

</RelativeLayout>
